<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaverieClient.MainPage"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,50"
            Spacing="25"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center">

            <!-- Logo Image -->
            <Image
                Source="login_icon.png"
                HeightRequest="150"
                Aspect="AspectFit"
                HorizontalOptions="Center" />

            <!-- Welcome Text -->
            <Label
                Text="Welcome Back"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White" />

            <!-- Username Entry -->
            <Entry
                x:Name="UsernameEntry"
                Placeholder="Username"
                PlaceholderColor="#888"
                Keyboard="Default"
                TextColor="White"
                BackgroundColor="#222"
                HeightRequest="50"
                Margin="0,10"
                VerticalOptions="CenterAndExpand"
                 />

            <!-- Password Entry -->
            <Entry
                x:Name="PasswordEntry"
                Placeholder="Password"
                IsPassword="True"
                PlaceholderColor="#888"
                TextColor="White"
                BackgroundColor="#222"
                HeightRequest="50"
                Margin="0,10"
                VerticalOptions="CenterAndExpand"
                 />

            <!-- Login Button -->
            <Button
                Text="Login"
                BackgroundColor="#1E90FF"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"
                HorizontalOptions="Fill"
                Margin="0,20" />

            <!-- Sign Up Text -->
            <Label
                Text="Don't have an account? Sign up"
                FontSize="16"
                TextColor="#1E90FF"
                HorizontalOptions="Center"
                >
                
            </Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
